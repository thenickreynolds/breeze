{
    "manifest_version": 2,
    "name": "Breeze",
    "version": "0.2",
    "description": "Make browsing a breeze. Bookmark, session, history managment made fun and easy.",
    "author": "Nick Reynolds <me@nickreynolds.net> (http://nickreynolds.net)",
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+J"
            }
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "browser_action": {
        "default_title": "Breeze",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": [
            "contentscript.js",
            "css/bootstrap.min.css",
            "js/jquery-3.3.1.slim.min.js",
            "js/popper.min.js",
            "js/bootstrap.min.js"
        ]
    }],
    "background": {
        "persistent": true,
        "scripts": [
            "js/jquery-3.3.1.slim.min.js",
            "js/bootstrap.min.js",
            "js/popper.min.js",
            "js/Sortable.js",
            "background.js",
            "script.js"
        ]
    },
    "web_accessible_resources": [
        "popup.html",
        "script.js",
        "icon.png"
    ],
    "permissions": [
        "downloads",
        "tabs"
    ]
}