{
    "manifest_version": 2,
    "name": "Breeze",
    "version": "0.2",
    "description": "Make browsing a breeze. Bookmark, session, history managment made fun and easy.",
    "author": "Nick Reynolds <me@nickreynolds.net> (http://nickreynolds.net)",
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+J"
            }
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "browser_action": {
        "default_title": "Breeze",
        "default_popup": "react-popup/index.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "content_security_policy": "script-src 'self' 'sha256-rRV24oj4XFgP1MbQTUIezLXXoYo+D2/J9JveD+NnrCk='; object-src 'self'",
    "background": {
        "persistent": true,
        "scripts": [
            "js/jquery-3.3.1.slim.min.js",
            "js/bootstrap.min.js",
            "js/popper.min.js",
            "js/Sortable.js",
            "background.js",
            "script.js"
        ]
    },
    "web_accessible_resources": [
        "popup.html",
        "script.js",
        "icon.png"
    ],
    "permissions": [
        "tabs"
    ]
}